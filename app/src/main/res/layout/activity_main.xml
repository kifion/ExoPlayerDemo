<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context=".ui.TrackListActivity">

    <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_search" android:visibility="visible"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_track"
            tools:layout_editor_absoluteY="40dp"
            android:layout_below="@+id/list_search"
            android:layout_toEndOf="@+id/list_progress_bar"/>

    <ProgressBar
            android:id="@+id/list_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
</RelativeLayout>