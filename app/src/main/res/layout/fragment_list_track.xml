<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:paddingRight="4dp" android:weightSum="1">
        <ImageView
                android:id="@+id/track_cover"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="visible"
        >
        </ImageView>
        <LinearLayout android:layout_width="284dp" android:layout_height="match_parent"
                      android:orientation="vertical" android:paddingLeft="10dp" android:id="@+id/track_description">

            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/track_artist"
                    android:layout_marginBottom="10dp" android:layout_marginTop="20dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/track_name" android:paddingTop="10dp"
                    android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/track_divider"
            android:orientation="horizontal">
    </LinearLayout>
</LinearLayout>